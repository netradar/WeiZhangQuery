<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:onClick="onItemClick"
        android:background="@drawable/detail_item_background"
        >
      
			 <carweibo.netradar.lichao.RoundImageView
			  	   android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:layout_marginTop="15dp"
			        
			        android:layout_marginLeft="10dp"
		            android:id="@+id/selectuser_touxiang"
		           	android:layout_centerVertical="true"
		        	
		            
		            android:src="@drawable/switchuser" >
		            </carweibo.netradar.lichao.RoundImageView>
      

        <TextView
            android:id="@+id/selectuser_nickname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
           	
           	android:gravity="left"
            
            android:layout_toRightOf="@+id/selectuser_touxiang"
            
            android:layout_marginLeft="10dp"
            
            android:layout_alignTop="@+id/selectuser_touxiang"
            android:textColor="#444"
            android:textSize="17sp"
             />
        <TextView
            android:id="@+id/selectuser_usertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            
            android:layout_below="@+id/selectuser_nickname"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/selectuser_nickname"
            android:textColor="#555"
            android:textSize="13sp"
             />
        <ImageView
            android:id="@+id/selected_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"        	     	
			android:scaleType="matrix"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"
			android:src="@drawable/icon_grey" />		
    </RelativeLayout>
