<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 

    android:background="@drawable/my_msg_item_sel">
    
 
     <ImageView
          android:id="@+id/draft_item_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="10dp"
          android:layout_centerVertical="true"
          
          android:src="@drawable/newweibo_pressed" />

    <TextView
        android:id="@+id/draft_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
       	
       	android:layout_centerVertical="true"
      	android:layout_toRightOf="@+id/draft_item_image"
        android:layout_toLeftOf="@+id/draft_item_time"
       
        android:textColor="#555"
        android:textSize="17sp"/>
    
    <TextView
		android:id="@+id/draft_item_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="5dp"
		android:textSize="13sp"
		android:textColor="#555"
                   
                    
                   />

   

</RelativeLayout>