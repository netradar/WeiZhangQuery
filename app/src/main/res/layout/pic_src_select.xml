<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"  
        android:gravity="bottom"   
            
    >

    
    <LinearLayout 
        	android:id="@+id/exit_layout2"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_horizontal"
        	
        	android:orientation="vertical"
        	android:background="@drawable/exit_dialog_bg" >
    
       <Button
              android:id="@+id/fromCamera"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="10dp"
              android:text="拍照"
              android:textSize="18sp"
              android:textColor="#333"
              android:background="@drawable/btn_send_sel"
              android:gravity="center"
              android:onClick="onFromCamera"
			  
              />
           <Button
              android:id="@+id/fromAblum"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="10dp"
              android:text="从手机相册选择"
              android:textSize="18sp"
              android:textColor="#333"
              android:background="@drawable/btn_send_sel"
              android:gravity="center"
              android:onClick="onFromAlbum"
			 
              />
                  <Button
              android:id="@+id/cancelSelect"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="10dp"
              android:text="取消"
              android:textSize="18sp"
              android:textColor="#fff"
              android:background="@drawable/btn_style_red"
              android:gravity="center"
              android:onClick="onCancelSel"
			  
              />"
    </LinearLayout>

</LinearLayout>
