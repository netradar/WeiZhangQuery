<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" 
   	android:onClick="onClickItem"
    android:longClickable="true"
   
    android:background="#ffffff">
    
    	<ImageView
    	    android:id="@+id/caricon"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_marginLeft="5dp"
    	    android:layout_marginTop="20dp"
    	    android:layout_marginBottom="20dp"
    	    android:layout_centerVertical="true"
    	    android:src="@drawable/car_icon" />
    	
    	<TextView
        android:id="@+id/car_num"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
     	android:layout_alignParentTop="true"
       	android:layout_marginLeft="10dp"
       	android:layout_toRightOf="@+id/caricon"
       	android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textSize="17sp"
         />
    <TextView
        android:id="@+id/car_owner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/car_num"
        android:layout_toLeftOf="@+id/submiticon"
       	android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
     	android:layout_marginRight="10dp"
     	android:layout_marginTop="5dp"
     	android:layout_marginBottom="5dp"
     	
        android:textColor="#000000"
        android:textSize="17sp"/>



    	<ImageView
    	android:id="@+id/submiticon"
     	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"        	     	
        android:scaleType="matrix"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/mm_submenu" />


   
</RelativeLayout>