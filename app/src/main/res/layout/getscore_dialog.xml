<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   
 	
   
    android:orientation="vertical" >
       <RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="60dp"
            			
            			android:gravity="center_vertical"
            			
            			android:clickable="true"
            			
            			android:background="@drawable/preference_first_item" >
            			
            			<TextView
            			   	android:id="@+id/sina_text"
        					android:layout_width="fill_parent" 
        					android:layout_height="wrap_content"
        					
        					android:layout_marginLeft="5dp"
        					android:layout_centerVertical="true"
        					android:text="把本软件分享给："
        					android:textSize="17sp"		
							android:textColor="#2E8B57" />
            		
            			     
        							
      				</RelativeLayout>
 		   <RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="60dp"
            			
            			android:gravity="center_vertical"
            			
            			android:clickable="true"
            			android:onClick="onGetScoreSina"
            			android:background="@drawable/preference_item" >
            			<ImageView
            			    android:id="@+id/sina_weibo_icon"
            				android:layout_width="35dp"
        					android:layout_height="35dp"        	     	
        					
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="2dp"
        					android:src="@drawable/logo" /> 
            			<TextView
            			   	android:id="@+id/sina_text"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@+id/sina_weibo_icon"
        					android:layout_marginLeft="5dp"
        					android:layout_centerVertical="true"
        					android:text="新浪微博好友"
        					android:textSize="16sp"		
							android:textColor="#555" />
            		
            			     
        							
      				</RelativeLayout>
      			<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="60dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:onClick="onGetScoreTencent"
            			android:background="@drawable/preference_item" >
						<ImageView
            			   
            			   android:id="@+id/tencent_weibo_icon"
            				android:layout_width="35dp"
        					android:layout_height="35dp"        	     	
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="2dp"
        					android:src="@drawable/icon_tencent_weibo" /> 
            			<TextView
            			   	android:id="@+id/tencent_text"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@+id/tencent_weibo_icon"
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="5dp" 
        					android:text="腾讯微博好友"
        					android:textSize="15sp"		
							android:textColor="#555" />
            			
            			  
        								
      				</RelativeLayout>
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="60dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:onClick="onGetScoreFriend"
            			android:background="@drawable/preference_item" >
						<ImageView
            			   
            			   android:id="@+id/tencent_weibo_icon"
            				android:layout_width="35dp"
        					android:layout_height="35dp"        	     	
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="2dp"
        					android:src="@drawable/icon" /> 
            			<TextView
            			   	android:id="@+id/tencent_text"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@+id/tencent_weibo_icon"
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="5dp" 
        					android:text="微信好友"
        					android:textSize="15sp"		
							android:textColor="#555" />
            					
      				</RelativeLayout>
            		<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="60dp"
            			
            			android:gravity="center_vertical"
            			
            			android:clickable="true"
            			android:onClick="onGetScoreWeixin"
            			android:background="@drawable/preference_last_item" >
            		<ImageView
            			   
            			   	android:id="@+id/circle_icon"
            				android:layout_width="35dp"
        					android:layout_height="35dp"        	     	
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="2dp"
        					android:src="@drawable/more_circlefriends" /> 
            			<TextView
            			   	android:id="@+id/weixin_text"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@+id/circle_icon"
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="5dp"
        					android:text="朋友圈"
        					android:textSize="15sp"		
							android:textColor="#555" />
            			
            		
        		
					</RelativeLayout>
					<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="60dp"
            			
            			android:gravity="center_vertical"
            			
            			android:clickable="true"
            			android:onClick="onGetScoreApp"
            			android:visibility="gone"
            			android:background="@drawable/preference_last_item" >
            		<ImageView
            			   
            			   	android:id="@+id/circle_icon"
            				android:layout_width="35dp"
        					android:layout_height="35dp"        	     	
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="2dp"
        					android:src="@drawable/h_good" /> 
            			<TextView
            			   
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@+id/circle_icon"
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="2dp"
        					android:text="下载并安装推荐应用"
        					android:textSize="15sp"		
							android:textColor="#555" />
            			<TextView
            			    
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"     
        					android:layout_toLeftOf="@+id/getscore_icon4"   	  
        					android:layout_marginRight="5dp"
        					android:layout_centerVertical="true"
        					android:gravity="center"
                      	  	android:text="+20分"
        					android:textColor="#555"
                       		android:textSize="15sp" />      
        			<ImageView
				            android:id="@+id/getscore_icon4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"        	     	
							android:layout_centerVertical="true"
							android:layout_alignParentRight="true"
							android:layout_marginRight="10dp"
							android:src="@drawable/icon_grey" />		
      				</RelativeLayout>

</LinearLayout>
